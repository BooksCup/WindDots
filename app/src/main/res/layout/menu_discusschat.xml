<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <View
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/shape_menu_arrow_corner"
        android:rotation="45.0"
        android:layout_below="@id/ll_window"
        />


    <LinearLayout
        android:id="@+id/ll_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:background="@drawable/shape_menu_corner"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/discuss_status_close"
            android:textColor="@color/colorWhite" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginHorizontal="10dp"
            android:background="@color/colorWhite" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/discuss_delete"
            android:textColor="@color/colorWhite"/>




    </LinearLayout>



</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/header_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorF0"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="实时汇率"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看更多"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_below="@+id/header_rate"
        android:text=""
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/tv_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_type"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:text=""
        android:textColor="@color/colorStyleG"
        />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_type"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tv_type"
        android:text=""/>


    <TextView
        android:id="@+id/tv_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_rate"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorStyleG"
        android:layout_toRightOf="@+id/tv_rate"
        android:layout_marginLeft="10dp"
        android:text=""/>

    <TextView
        android:id="@+id/tv_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="今开"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_todayvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_today"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="10dp"
        android:text=""
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_yestoday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time"
        android:layout_toRightOf="@+id/tv_todayvalue"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:text="昨收"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_yestoday_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_yestoday"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="10dp"
        android:text=""
        android:visibility="gone"/>


    <TextView
        android:id="@+id/tv_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_today"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="最高"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_height_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_today"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_today"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="10dp"
        android:text=""
        android:visibility="gone"/>


    <TextView
        android:id="@+id/tv_deep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_today"
        android:layout_toRightOf="@+id/tv_todayvalue"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:text="最低"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_deep_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_today"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_yestoday"
        android:textColor="@color/colorStyleG"
        android:layout_marginLeft="10dp"
        android:text=""
        android:visibility="gone"/>

<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1dp"-->
<!--        android:layout_below="@+id/tv_deep_value"-->
<!--        android:background="@color/alpha_10_black"-->
<!--        android:layout_marginTop="10dp"/>-->


    <LinearLayout
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_rate"
        android:background="@color/colorF0"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="当日原料走势"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看更多"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_title"
        >

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:paddingVertical="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="名称"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="价格"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="涨跌"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="单位"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>

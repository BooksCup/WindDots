<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/item_approvalpecess_money_line">

        <TextView
            android:id="@+id/item_approvalpecess_money_position_tv"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#b2b2b2"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/item_approvalpecess_money_fee_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="交通费"
            android:textSize="@dimen/cell_text_size"
            android:textColor="#b2b2b2"
            android:layout_toRightOf="@+id/item_approvalpecess_money_position_tv"
            android:layout_toLeftOf="@+id/item_approvalpecess_money_count_tv"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/item_approvalpecess_money_right_iv"
            android:layout_width="10dp"
            android:layout_height="17dp"
            android:src="@mipmap/icon_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/item_approvalpecess_money_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000000人民币"
            android:textColor="#b2b2b2"
            android:textSize="@dimen/cell_text_size"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/item_approvalpecess_money_right_iv"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:id="@+id/item_approvalpecess_money_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/alpha_05_black"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>

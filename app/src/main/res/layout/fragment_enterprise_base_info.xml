<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorF0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_credit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:padding="10dp"
            android:textSize="15sp"
            android:text="统一社会信用代码: " />

        <TextView
            android:id="@+id/tv_register_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/colorWhite"
            android:padding="10dp"
            android:textSize="15sp"
            android:text="工商注册号: " />

        <TextView
            android:id="@+id/tv_organization_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/colorWhite"
            android:padding="10dp"
            android:textSize="15sp"
            android:text="组织机构代码: " />

        <TextView
            android:id="@+id/tv_taxpayer_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/colorWhite"
            android:padding="10dp"
            android:textSize="15sp"
            android:text="纳税人识别号: " />

        <TextView
            android:id="@+id/tv_taxpayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/colorWhite"
            android:padding="10dp"
            android:textSize="15sp"
            android:text="纳税人识资质: "
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_enterprose_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:padding="10dp"
            android:textSize="15sp"
            android:text="企业类型: " />

        <TextView
            android:id="@+id/tv_industry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/colorWhite"
            android:padding="10dp"
            android:textSize="15sp"
            android:text="行业: " />
        <TextView
            android:id="@+id/tv_businessScope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/colorWhite"
            android:padding="10dp"
            android:text="经营范围: "
            android:textSize="15sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_deadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/colorWhite"
            android:padding="10dp"
            android:textSize="15sp"
            android:text="组营业期限: " />

        <TextView
            android:id="@+id/tv_numbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/colorWhite"
            android:padding="10dp"
            android:textSize="15sp"
            android:text="规模: " />

        <TextView
            android:id="@+id/tv_insurance_numbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/colorWhite"
            android:padding="10dp"
            android:textSize="15sp"
            android:text="参保人数: " />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:padding="10dp"
            android:text="联系电话: "
            android:textSize="15sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/colorWhite"
            android:padding="10dp"
            android:text="企业官网: "
            android:textSize="15sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/colorWhite"
            android:padding="10dp"
            android:text="企业邮箱: "
            android:textSize="15sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:padding="10dp"
            android:textSize="15sp"
            android:text="注册地址: " />
    </LinearLayout>
</ScrollView>

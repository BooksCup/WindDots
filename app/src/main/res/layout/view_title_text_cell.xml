<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorWhite"
    android:paddingHorizontal="10dp"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/view_title_text_title"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text=""
        android:textSize="@dimen/cell_text_size"
        android:textColor="@color/color32" />

    <TextView
        android:id="@+id/view_title_text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:text=""
        android:textSize="@dimen/cell_text_size"
        android:lines="1"
        android:layout_weight="1"
        android:textColor="@color/colorB2"
        android:ellipsize="end"
        />

    <ImageView
        android:id="@+id/view_title_text_icon_right"
        android:layout_width="10dp"
        android:layout_height="17dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_right"
        android:scaleType="centerCrop"
        />

</LinearLayout>

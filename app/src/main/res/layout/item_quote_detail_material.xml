<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    >

    <!--材料布局-->
    <LinearLayout
        android:id="@+id/material"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="1111"
            android:textSize="14sp"
            android:textColor="@color/color32"
            android:paddingLeft="10dp"
            android:lines="1"/>
        <TextView
            android:id="@+id/tv_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="1111"
            android:textSize="12sp"
            android:textColor="@color/color50"
            android:paddingLeft="10dp"
            android:lines="1"/>
        <TextView
            android:id="@+id/tv_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="1111"
            android:textSize="12sp"
            android:textColor="@color/color50"
            android:paddingLeft="10dp"
            android:lines="1"/>
        <TextView
            android:id="@+id/tv_4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="1111"
            android:textSize="12sp"
            android:paddingLeft="10dp"
            android:textColor="@color/color50"
            android:lines="1"/>
        <TextView
            android:id="@+id/tv_5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="1111"
            android:textSize="12sp"
            android:textColor="@color/color50"
            android:paddingLeft="10dp"
            android:lines="1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/alpha_20_black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_price_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="1111"
            android:textSize="14sp"
            android:textColor="@color/color32"
            android:paddingLeft="10dp"
            android:lines="1"/>
        <TextView
            android:id="@+id/tv_peice_remark"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="1111"
            android:textSize="12sp"
            android:textColor="@color/color50"
            android:paddingLeft="10dp"
            android:lines="1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/alpha_20_black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cost"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:id="@+id/tv_cost_content"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:text="1111"
            android:textSize="14sp"
            android:textColor="@color/color32"
            android:paddingLeft="10dp"
            android:lines="1"
            android:gravity="center_vertical"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/alpha_20_black" />
    </LinearLayout>


</LinearLayout>

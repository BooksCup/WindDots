<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/activity_main_body_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/activity_main_tab_bottom_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorBlack"
        android:layout_above="@+id/activity_main_tab_bottom_bar"/>


    <LinearLayout
        android:id="@+id/activity_main_tab_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/activity_main_tab_bottom_bar_rg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="4"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <RadioButton
                android:id="@+id/activity_main_tab_businessarea"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/selector_tab_businessarea"
                android:gravity="center"
                android:background="@null"
                android:text="商圈"
                android:textColor="@drawable/selector_tab_color" />

            <RadioButton
                android:id="@+id/activity_main_tab_desktop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/selector_tab_work"
                android:gravity="center"
                android:background="@null"
                android:text="桌面"
                android:textColor="@drawable/selector_tab_color" />

            <RadioButton
                android:id="@+id/activity_main_tab_message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawableTop="@drawable/selector_tab_mine"
                android:gravity="center"
                android:text="消息"
                android:textColor="@drawable/selector_tab_color" />

            <RadioButton
                android:id="@+id/activity_main_tab_schedule"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/selector_tab_schedule"
                android:gravity="center"
                android:background="@null"
                android:text="日程"
                android:textColor="@drawable/selector_tab_color" />

        </RadioGroup>

        <RelativeLayout
            android:id="@+id/activity_main_tab_bottom_bar_shortcut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:src="@mipmap/fast" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="6dp"
                android:text="快捷" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
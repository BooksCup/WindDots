<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/footer_approvalprocess_time_end_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="20dp">

        <View
            android:id="@+id/footer_approvalprocess_time_radius_view"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/gray_radius_process"
            android:layout_centerVertical="true"/>

        <View
            android:layout_width="2dp"
            android:layout_height="14dp"
            android:background="@color/alpha_05_black"
            android:layout_marginLeft="5dp"/>
        <View
            android:layout_width="2dp"
            android:layout_height="14dp"
            android:background="@color/alpha_05_black"
            android:layout_marginLeft="5dp"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/footer_approvalprocess_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:text="流程开始"
            android:layout_toRightOf="@+id/footer_approvalprocess_time_radius_view"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/icon_company"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="南京泽冠制衣有限公司南京泽冠制衣有限公司"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:singleLine="false"
        android:layout_toLeftOf="@+id/tv_status"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_select_border"
        android:paddingHorizontal="5dp"
        android:paddingVertical="3dp"
        android:text="续存"
        android:textColor="#3A9064" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小微企业"
        android:textSize="14sp"
        android:textColor="#6BA7CD"
        android:layout_below="@+id/tv_name"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_marginTop="10dp"
        android:visibility="gone"/>

   <LinearLayout
       android:id="@+id/ll_content"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_below="@+id/tv_type"
       android:paddingHorizontal="30dp"
       android:layout_marginTop="10dp"
       >
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:orientation="vertical">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="12sp"
               android:text="法定代表人"
               android:textColor="#505050"
               android:layout_gravity="center_horizontal"
               />
           <TextView
               android:id="@+id/tv_legalPersonName"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="12sp"
               android:text="季伟"
               android:layout_marginTop="5dp"
               android:layout_gravity="center_horizontal"
               android:textColor="#0080F4"
               />
       </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:orientation="vertical">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="12sp"
               android:text="注册资本"
               android:textColor="#505050"
               android:layout_gravity="center_horizontal"
               />
           <TextView
               android:id="@+id/tv_regCapital"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="12sp"
               android:text="5000万人民币"
               android:layout_marginTop="5dp"
               android:layout_gravity="center_horizontal"
               />
       </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:orientation="vertical">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="12sp"
               android:text="成立日期"
               android:layout_gravity="center_horizontal"
               android:textColor="#505050"
               />
           <TextView
               android:id="@+id/tv_date"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="12sp"
               android:text="2019-12-30"
               android:layout_marginTop="5dp"
               android:layout_gravity="center_horizontal"
               />
       </LinearLayout>
   </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/alpha_05_black"
        android:layout_below="@+id/ll_content"
        android:layout_marginTop="10dp"/>


    <ImageView
        android:id="@+id/iv_enterprise_sort"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/enterprise_sort"
        android:layout_below="@+id/ll_content"
        />
    <TextView
        android:id="@+id/tv_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="公司简称: 泽冠制衣"
        android:layout_below="@+id/ll_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/iv_enterprise_sort"
         />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/alpha_05_black"
        android:layout_below="@+id/tv_sort"
        android:layout_marginTop="10dp"/>



    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电话"
        android:layout_below="@+id/ll_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:textColor="#3DA4D4"
        />

    <ImageView
        android:id="@+id/iv_enterprise_phone"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/enterprise_phone"
        android:layout_below="@+id/ll_content"
        android:layout_toLeftOf="@+id/tv_phone"
        android:layout_alignTop="@+id/tv_phone"
        android:layout_marginTop="3dp"
        />



</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="10dp"
            android:layout_height="50dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="申请人"
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/color32" />

            <ImageView
                android:id="@+id/view_claimingheader_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/view_claimingheader_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:text=""
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/colorB2" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/alpha_05_black" />

        <LinearLayout
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="抄送人"
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/color32" />

            <TextView
                android:id="@+id/view_claimingheader_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:text=""
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/colorB2"  />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/alpha_05_black" />

        <LinearLayout
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="申请时间"
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/color32" />

            <TextView
                android:id="@+id/view_claimingheader_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:text=""
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/colorB2"  />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/alpha_05_black" />

        <LinearLayout
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="主题"
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/color32" />

            <TextView
                android:id="@+id/view_claimingheader_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:text=""
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/colorB2"
                android:lines="1"
                />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/alpha_05_black" />

        <LinearLayout
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="报销类型"
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/color32" />

            <TextView
                android:id="@+id/view_claimingheader_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:text=""
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/colorB2"  />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/alpha_05_black" />

        <LinearLayout
            android:id="@+id/view_claimingheader_enterprisecell"
            android:paddingHorizontal="10dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="往来单位"
                android:textSize="15sp"
                android:textColor="@color/color32" />

            <TextView
                android:id="@+id/view_claimingheader_enterprise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/colorB2"  />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/alpha_05_black" />

        <LinearLayout
            android:id="@+id/view_claimingheader_amountcell"
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="金额"
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/color32" />

            <TextView
                android:id="@+id/view_claimingheader_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:text=""
                android:layout_weight="1"
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/colorB2"  />
            <ImageView
                android:id="@+id/view_claimingmoney_icon"
                android:layout_width="17dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_top"
                android:scaleType="centerCrop"
                />

        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/alpha_05_black" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/view_claimingheader_moneylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/alpha_05_black" />

        <LinearLayout
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="备注"
                android:textSize="15sp"
                android:textColor="@color/color32" />
            <TextView
                android:id="@+id/view_claimingheader_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/colorB2"  />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/alpha_05_black" />
        <LinearLayout
            android:id="@+id/view_claimingheader_statuscell"
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="审核"
                android:textSize="15sp"
                android:textColor="@color/color32" />
            <ImageView
                android:id="@+id/view_claimingheader_statusicon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/fail"
                />
            <TextView
                android:id="@+id/view_claimingheader_statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/colorB2"  />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/alpha_05_black" />

    <com.wd.winddots.view.TimeLineHeaderFooterView
        android:id="@+id/view_claimingheader_timeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>

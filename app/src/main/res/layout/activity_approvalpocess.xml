<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:layout_above="@+id/activity_approvalprocess_btn_layout">

<!--        显示请假加班流程-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activity_approvalprocess_time_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

<!--        显示报销流程-->
        <ScrollView
            android:id="@+id/activity_approvalprocess_money_sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/activity_approvalprocess_money_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <!--            申请人-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:id="@+id/activity_approvalprocess_money_apply_user_tv"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="申请人"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color32"/>

                    <ImageView
                        android:id="@+id/activity_approvalprocess_money_apply_user_iv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="centerCrop"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/activity_approvalprocess_money_apply_user_tv"/>

                    <TextView
                        android:id="@+id/activity_approvalprocess_money_apply_user_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张三"
                        android:textSize="13sp"
                        android:textColor="#b2b2b2"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/activity_approvalprocess_money_apply_user_iv"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/alpha_05_black"/>

                <!--            抄送人-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:id="@+id/activity_approvalprocess_money_copy_user_tv"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="抄送人"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color32" />



                    <TextView
                        android:id="@+id/activity_approvalprocess_money_copy_user_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="李四"
                        android:textColor="#b2b2b2"
                        android:textSize="13sp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/activity_approvalprocess_money_copy_user_tv"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/alpha_05_black"/>

                <!--            申请时间-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:id="@+id/activity_approvalprocess_money_apply_title_tv"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="申请时间"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color32" />



                    <TextView
                        android:id="@+id/activity_approvalprocess_money_apply_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2019-12-24 10:18"
                        android:textColor="#b2b2b2"
                        android:textSize="13sp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/activity_approvalprocess_money_apply_title_tv"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/alpha_05_black"/>

                <!--            主题-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:id="@+id/activity_approvalprocess_money_theme_title_tv"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="主题"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color32" />



                    <TextView
                        android:id="@+id/activity_approvalprocess_money_theme_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="666"
                        android:textColor="#b2b2b2"
                        android:textSize="13sp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/activity_approvalprocess_money_theme_title_tv"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/alpha_05_black"/>

                <!--            报销类型-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:id="@+id/activity_approvalprocess_money_type_title_tv"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="报销类型"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color32" />



                    <TextView
                        android:id="@+id/activity_approvalprocess_money_type_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="内部报销"
                        android:textColor="#b2b2b2"
                        android:textSize="13sp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/activity_approvalprocess_money_type_title_tv"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/alpha_05_black"/>


                <!--            往来单位-->
                <RelativeLayout
                    android:id="@+id/activity_approvalprocess_money_andfromcompany_layout"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_above="@+id/activity_approvalprocess_money_andfromcompany_line">

                        <TextView
                            android:id="@+id/activity_approvalprocess_money_to_enterprise_title_tv"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="往来单位"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:textColor="@color/color32" />


                        <TextView
                            android:id="@+id/activity_approvalprocess_money_to_enterprise_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="双登集团"
                            android:textSize="13sp"
                            android:textColor="@color/colorB2"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/activity_approvalprocess_money_to_enterprise_title_tv"/>

                    </RelativeLayout>

                    <View
                        android:id="@+id/activity_approvalprocess_money_andfromcompany_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/alpha_05_black"
                        android:layout_alignParentBottom="true"/>

                </RelativeLayout>






                <!--            金额-->
                <RelativeLayout
                    android:id="@+id/activity_approvalprocess_money_money_rl"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:id="@+id/activity_approvalprocess_money_money_title_tv"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="金额"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color32" />

                    <ImageView
                        android:id="@+id/activity_approvalprocess_money_money_state_iv"
                        android:layout_width="17dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/icon_top" />


                    <TextView
                        android:id="@+id/activity_approvalprocess_money_money_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#b2b2b2"
                        android:textSize="13sp"
                        android:layout_toRightOf="@+id/activity_approvalprocess_money_money_title_tv"
                        android:text="5000人民币" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/alpha_05_black"/>

                <!--            金额列表-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/activity_approvalprocess_money_money_list_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <!--            备注-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:id="@+id/activity_approvalprocess_money_note_title_tv"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="备注"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color32" />



                    <TextView
                        android:id="@+id/activity_approvalprocess_money_note_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="这个是交通费用"
                        android:textColor="#b2b2b2"
                        android:textSize="13sp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/activity_approvalprocess_money_note_title_tv"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/alpha_05_black"/>

                <!--            审核-->
                <RelativeLayout
                    android:id="@+id/activity_approvalprocess_money_approval_rl"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:id="@+id/activity_approvalprocess_money_approval_title_tv"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="审核"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color32" />

                    <ImageView
                        android:id="@+id/activity_approvalprocess_money_approval_expansion_state_iv"
                        android:layout_width="17dp"
                        android:layout_height="10dp"
                        android:src="@mipmap/icon_top"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"/>

                    <ImageView
                        android:id="@+id/activity_approvalprocess_money_approval_state_iv"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/waiting"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/activity_approvalprocess_money_approval_title_tv"/>

                    <TextView
                        android:id="@+id/activity_approvalprocess_money_approval_state_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="等待处理"
                        android:textColor="#b2b2b2"
                        android:textSize="13sp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/activity_approvalprocess_money_approval_state_iv"
                        android:layout_toLeftOf="@+id/activity_approvalprocess_money_approval_expansion_state_iv"/>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/alpha_05_black"/>

                <!--            审核列表-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/activity_approvalprocess_money_approval_list_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </ScrollView>


    </RelativeLayout>


<!--    底部button-->
    <RelativeLayout
        android:id="@+id/activity_approvalprocess_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="gone"
        android:background="@color/colorWhite"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/activity_approvalprocess_recall_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorStyle"
            android:gravity="center"
            android:text="撤销"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:visibility="gone"
            android:layout_alignParentBottom="true"/>


        <LinearLayout
            android:id="@+id/activity_approvalprocess_y_and_n_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_approvalprocess_y_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:background="@color/colorStyleG"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:text="同意"/>

            <TextView
                android:id="@+id/activity_approvalprocess_n_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:background="@color/colorStyle"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:text="驳回"/>

        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>
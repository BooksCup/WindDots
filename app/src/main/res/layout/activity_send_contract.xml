                    android:layout_gravity="center_vertical"
                    android:text="其他设置"
                    android:textColor="@color/color32"
                    android:textSize="@dimen/form_text_size" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"

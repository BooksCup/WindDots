<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp">

            <ImageView
                android:id="@+id/header_approvalprocess_time_user_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/header_approvalprocess_time_user_iv"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/header_approvalprocess_time_user_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/color32"
                    android:gravity="center_vertical"
                    android:text="张三  服务端开发" />

                <TextView
                    android:id="@+id/header_approvalprocess_time_time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/color50"
                    android:gravity="center_vertical"
                    android:text="2020-04-09 12:34:04" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0" />


        <TextView
            android:id="@+id/header_approvalprocess_time_class_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="请假"
            android:paddingTop="@dimen/dp_10"
            android:textStyle="bold"
            android:textColor="@color/color32"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/header_approvalprocess_time_touser_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="抄送人:李四"
            android:textSize="13dp"
            android:textColor="@color/color50"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/header_approvalprocess_time_time_count_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="@color/color50"
            android:paddingTop="5dp"
            android:text="请假天数:1天" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/header_approvalprocess_time_time_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/header_approvalprocess_time_cause_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="理由:年假出去玩"
            android:textSize="13dp"
            android:textColor="@color/color50"
            android:paddingTop="@dimen/dp_10"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/header_approvalprocess_time_imagelist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@color/alpha_05_black" />


    <RelativeLayout
        android:id="@+id/header_approvalprocess_time_end_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="20dp">


        <View
            android:id="@+id/header_approvalprocess_time_radius_view"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/gray_radius_process"
            android:layout_centerVertical="true"/>

        <View
            android:layout_width="2dp"
            android:layout_height="14dp"
            android:background="@color/alpha_05_black"
            android:layout_marginLeft="5dp"/>
        <View
            android:layout_width="2dp"
            android:layout_height="14dp"
            android:background="@color/alpha_05_black"
            android:layout_marginLeft="5dp"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:text="流程结束"
            android:layout_toRightOf="@+id/header_approvalprocess_time_radius_view"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>
</LinearLayout>
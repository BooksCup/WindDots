<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp"
    android:paddingHorizontal="10dp"
    android:id="@+id/item_mine_attendance_item_body"
    >
    <TextView
        android:id="@+id/item_mine_attendance_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请假"
        android:textStyle="bold"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/item_mine_attendance_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="状态"
        android:textSize="13sp"
        android:layout_alignParentRight="true"
        android:textColor="@color/color50"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_mine_attendance_rlist"
        android:layout_below="@+id/item_mine_attendance_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:nestedScrollingEnabled="false"
        />

</RelativeLayout>

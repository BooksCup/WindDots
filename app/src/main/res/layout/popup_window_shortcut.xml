<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shape_popshort_body"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_popshort_corner"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pop_shortcut_fast_one"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="报销" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginHorizontal="10dp"
            android:background="@color/color32" />

        <TextView
            android:id="@+id/pop_shortcut_fast_two"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:paddingHorizontal="25dp"
            android:paddingVertical="4dp"
            android:text="考勤" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginHorizontal="10dp"
            android:background="@color/color32" />

        <TextView
            android:id="@+id/pop_shortcut_fast_three"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:paddingHorizontal="25dp"
            android:paddingVertical="4dp"
            android:text="扫描" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginHorizontal="10dp"
            android:background="@color/color32" />


    </LinearLayout>

        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="-6dp"
            android:background="@drawable/shape_popshort_arrow_corner"
            android:rotation="45.0"
            android:layout_below="@id/ll_window"
            />


</RelativeLayout>
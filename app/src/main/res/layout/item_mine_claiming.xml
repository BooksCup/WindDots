<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingLeft="2.5dp"
    >

    <ImageView
        android:id="@+id/item_mine_claiming_icon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        />

      <TextView
          android:id="@+id/item_mine_claiming_title1"
          android:text="1111"
          android:layout_width="match_parent"
          android:layout_height="25dp"
          android:textSize="15sp"
          android:gravity="center_vertical"
          android:textColor="@color/color32"
          android:layout_toRightOf="@+id/item_mine_claiming_icon"
          android:layout_alignTop="@+id/item_mine_claiming_icon"
          />

      <TextView
          android:id="@+id/item_mine_claiming_title2"
          android:layout_width="match_parent"
          android:layout_height="25dp"
          android:textSize="13sp"
          android:gravity="center_vertical"
          android:textColor="@color/color50"
          android:layout_toRightOf="@+id/item_mine_claiming_icon"
          android:layout_below="@+id/item_mine_claiming_title1"
          />



          <TextView
              android:id="@+id/item_mine_claiming_title3"
              android:text="111"
              android:layout_width="wrap_content"
              android:layout_height="25dp"
              android:textSize="13sp"
              android:gravity="center_vertical"
              android:textColor="@color/color50"
              android:layout_toRightOf="@+id/item_mine_claiming_icon"
              android:layout_below="@+id/item_mine_claiming_title2"
              />

          <TextView
              android:id="@+id/item_mine_claiming_title4"
              android:layout_width="wrap_content"
              android:layout_height="25dp"
              android:text="已完成"
              android:textSize="12sp"
              android:paddingHorizontal="5dp"
              android:paddingVertical="5dp"
              android:textColor="@color/colorAccent"
              android:layout_alignParentBottom="true"
              android:layout_alignParentRight="true"
              android:layout_marginRight="15dp"
              android:gravity="center_vertical"
              android:layout_marginBottom="3dp"
              />

</RelativeLayout>

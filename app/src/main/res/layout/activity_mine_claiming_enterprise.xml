<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#F1EEF5"
        android:paddingLeft="15dp"
        android:orientation="horizontal">
        
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:tint="#C2C2C2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_bottom_search"
                />
            <EditText
                android:id="@+id/activity_mine_claiming_enterprise_edittext"
                android:background="@null"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:hint="输入企业名称"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/activity_mine_claiming_enterprise_search"
            android:paddingHorizontal="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="搜索"
            android:textColor="#62BEEE"
            android:gravity="center_vertical"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_mine_claiming_enterprise_rlist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
</LinearLayout>

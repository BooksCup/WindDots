<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shape_popshort_body"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:background="@drawable/shape_popshort_corner"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pop_shortcut_fast_one"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="报销" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginHorizontal="10dp"
            android:background="@color/color32" />

        <TextView
            android:id="@+id/pop_shortcut_fast_two"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:paddingHorizontal="25dp"
            android:paddingVertical="4dp"
            android:text="考勤" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginHorizontal="10dp"
            android:background="@color/color32" />

        <TextView
            android:id="@+id/pop_shortcut_fast_three"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:paddingHorizontal="25dp"
            android:paddingVertical="4dp"
            android:text="扫描" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/pop_shortcut_one"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/pop_shortcut_two"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/pop_shortcut_three"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/pop_shortcut_four"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/pop_shortcut_five"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1" />

    </LinearLayout>

    <View
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/shape_popshort_arrow_corner"
        android:rotation="45.0" />
</RelativeLayout>
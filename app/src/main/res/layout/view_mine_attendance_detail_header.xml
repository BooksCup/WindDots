<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        >
        <ImageView
            android:id="@+id/view_attendance_header_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/view_attendance_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:textColor="@color/color32"
            android:layout_toRightOf="@+id/view_attendance_header_icon"
            />

        <TextView
            android:id="@+id/view_attendance_header_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13sp"
            android:textColor="@color/color50"
            android:layout_toRightOf="@+id/view_attendance_header_name"
            android:layout_alignBottom="@+id/view_attendance_header_name"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/view_attendance_header_addtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view_attendance_header_icon"
            android:layout_alignBottom="@+id/view_attendance_header_icon"
            android:text=""
            android:textColor="@color/color50"
            android:textSize="13sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/alpha_05_black" />

    <TextView
        android:id="@+id/view_attendance_header_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:textSize="17sp"
        android:textColor="@color/colorBlack"
        android:text="请假  事假"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/view_attendance_header_copy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp"
        android:textSize="13sp"
        android:textColor="@color/color50"
        android:text="抄送人"
        />
    <TextView
        android:id="@+id/view_attendance_header_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textSize="13sp"
        android:textColor="@color/color50"
        android:text="时间"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/view_attendance_header_timelist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/view_attendance_header_cause"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:textSize="13sp"
        android:textColor="@color/color50"
        android:text="理由: "
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/view_attendance_header_imagelist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorF0"
        />

    <com.wd.winddots.view.TimeLineHeaderFooterView
        android:id="@+id/view_attendance_header_timelinestart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
